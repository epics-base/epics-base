	@$(RM) $(notdir $@)
	$(MSI3_15) $(DBFLAGS) -o $(notdir $@) -S$< $(TEMPLATE_FILENAME)
	@$(MV) $(notdir $@) $@

$(COMMON_DIR)/%.db: %$(TEMPL_SUFFIX)
	$(ECHO) "Inflating database from $<"
	@$(RM) $(notdir $@)
	$(MSI3_15) $(DBFLAGS) -o $(notdir $@) $<
	@$(MV) $(notdir $@) $@

