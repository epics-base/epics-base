-include $(TOP)/configure/os/CONFIG_SITE.$(EPICS_HOST_ARCH).Common

ifdef T_A

#  Site specific target architecture definitions
-include $(TOP)/configure/os/CONFIG_SITE.Common.$(T_A)

#  Cross compile specific definitions
