
# See: http://www.cmake.org/Wiki/CMake_Cross_Compiling
# and: http://www.cmake.org/Wiki/CmakeMingw

# the name of the target operating system
SET(CMAKE_SYSTEM_NAME @SYSTEM_NAME@)
SET(CMAKE_SYSTEM_PROCESSOR @SYSTEM_PROCESSOR@)
SET(CMAKE_SYSTEM_VERSION @SYSTEM_VERSION@)

# these are only meaningful on RTEMS systems
SET(RTEMS_BSP @RTEMS_BSP@)

# which compilers to use for C and C++
SET(CMAKE_C_COMPILER @C_COMPILER@)
SET(CMAKE_CXX_COMPILER @CXX_COMPILER@)
SET(CMAKE_OBJCOPY @OBJCOPY@ CACHE FILEPATH "xx" FORCE)

# here is the target environment located
#  Note: can add mode to list
set(CMAKE_FIND_ROOT_PATH @TOOL_LOCATION@)

message(STATUS "Using ${CMAKE_C_COMPILER} with ${CMAKE_FIND_ROOT_PATH}")

# adjust the default behaviour of the FIND_XXX() commands:
# search headers and libraries in the target environment, search 
# programs in the host environment
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
